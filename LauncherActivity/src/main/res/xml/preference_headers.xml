<?xml version="1.0" encoding="utf-8"?>
<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android">
    <header android:fragment=
        "com.example.yanli.launcheractivity.MyPreferenceActivity$Prefs1Fragment"
        android:icon="@mipmap/ic_launcher"
        android:title="Code setting"
        android:summary="setting codes related items" />

    <header android:fragment=
        "com.example.yanli.launcheractivity.MyPreferenceActivity$Prefer2Fragment"
        android:icon="@mipmap/ic_launcher"
        android:title="DisplayScreen setting "
        android:summary="setting DisplayScreen related items">

        <extra android:name="website"
            android:value="www.google.com" />

    </header>
    <header
        android:icon="@mipmap/ic_launcher"
        android:title="Use Intent"
        android:summary="Using Intent to call another Activity">
        <intent android:action="android.intent.action.VIEW"
            android:data="http://www.google.com" />
    </header>
</preference-headers>
